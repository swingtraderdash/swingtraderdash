

{
  "hosting": {
    "public": "public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "/blanktemplate",
        "function": "pageGatekeeper"
      },
      {
        "source": "/blanktemplate.html",
        "function": "pageGatekeeper"
      },
      {
        "source": "/blanktemplate/**",
        "function": "pageGatekeeper"
      },
      {
        "source": "/trialpage",
        "function": "pageGatekeeper"
      },
      {
        "source": "/trialpage.html",
        "function": "pageGatekeeper"
      },
      {
        "source": "/trialpage/**",
        "function": "pageGatekeeper"
      },
      {
        "source": "/__/auth/session",
        "function": "sessionLogin"
      },
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "functions": [
    {
      "source": "functions",
      "codebase": "default",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log",
        "*.local"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run lint"
      ]
    }
  ],
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5101
    },
    "hosting": {
      "port": 5002
    },
    "ui": {
      "enabled": true,
      "port": 4402
    },
    "logging": {
      "port": 4502
    },
    "hub": {
      "port": 4401
    },
    "singleProjectMode": true
  }
}
 
